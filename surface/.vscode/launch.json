{
  "version": "0.2.0",
  "configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Gamepad",
			"program": "${workspaceFolder}/src/gamepad/gamepad_test.js",
			"skipFiles": [
				"<node_internals>/**"
			]
		},
    {
      "name": "Debug Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
			"args" : ["."],
			"outputCapture": "std",
			"env": {"NODE_ENV": "WATCH"}
    }
  ]
}